@{
    ViewData["Title"] = "Teşekkürler - TeknikServis Pro";
    var ad = TempData["AdSoyad"] as string;
}

<style>
    .confirmation-section {
        background: var(--bg-light);
        min-height: 100vh;
        display: flex;
        align-items: center;
        padding: 2rem 0;
    }

    .confirmation-card {
        background: var(--white);
        border-radius: 25px;
        padding: 4rem 3rem;
        box-shadow: var(--shadow-xl);
        border: none;
        text-align: center;
        position: relative;
        overflow: hidden;
        max-width: 700px;
        margin: 0 auto;
        animation: slideInUp 0.8s ease-out;
    }

    .confirmation-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 5px;
        background: var(--accent-gradient);
    }

    

    .success-icon {
        width: 120px;
        height: 120px;
        background: var(--accent-gradient);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 2.5rem;
        color: white;
        font-size: 3.5rem;
        animation: bounceIn 1s ease-out 0.3s both;
        box-shadow: var(--shadow-lg);
    }

    

    .confirmation-title {
        font-size: 3rem;
        font-weight: 900;
        background: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1rem;
        animation: fadeInUp 0.8s ease-out 0.5s both;
    }

    .confirmation-subtitle {
        font-size: 1.4rem;
        color: var(--text-dark);
        margin-bottom: 1.5rem;
        animation: fadeInUp 0.8s ease-out 0.7s both;
        font-weight: 600;
    }

    .confirmation-message {
        color: var(--text-light);
        font-size: 1.1rem;
        line-height: 1.7;
        margin-bottom: 3rem;
        animation: fadeInUp 0.8s ease-out 0.9s both;
    }

    .next-steps {
        background: var(--bg-light);
        border-radius: 20px;
        padding: 2.5rem;
        margin-bottom: 3rem;
        animation: fadeInUp 0.8s ease-out 1.1s both;
        position: relative;
        overflow: hidden;
    }

    .next-steps::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: var(--accent-gradient);
    }

    .next-steps h4 {
        color: var(--text-dark);
        font-weight: 800;
        margin-bottom: 2rem;
        font-size: 1.5rem;
        text-align: center;
    }

    .step-item {
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
        padding: 1.25rem;
        background: var(--white);
        border-radius: 15px;
        box-shadow: var(--shadow-sm);
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
    }

    .step-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 107, 53, 0.05), transparent);
        transition: left 0.5s ease;
    }

    .step-item:hover::before {
        left: 100%;
    }

    .step-item:hover {
        transform: translateX(10px);
        box-shadow: var(--shadow-md);
    }

    .step-number {
        width: 40px;
        height: 40px;
        background: var(--accent-gradient);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1.5rem;
        color: white;
        font-weight: 700;
        font-size: 1rem;
        flex-shrink: 0;
    }

    .step-text {
        color: var(--text-dark);
        font-size: 1rem;
        margin: 0;
        font-weight: 500;
        line-height: 1.5;
    }

    .btn-home {
        background: var(--accent-gradient);
        border: none;
        padding: 1.25rem 3rem;
        font-size: 1.2rem;
        font-weight: 700;
        border-radius: 50px;
        color: white;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        box-shadow: var(--shadow-md);
        position: relative;
        overflow: hidden;
        animation: fadeInUp 0.8s ease-out 1.3s both;
    }

    .btn-home::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.5s;
    }

    .btn-home:hover::before {
        left: 100%;
    }

    .btn-home:hover {
        transform: translateY(-3px);
        box-shadow: var(--shadow-lg);
        color: white;
    }

    
</style>

<section class="confirmation-section">
    <div class="container">
        <div class="confirmation-card">
            <div class="success-icon">
                <i class="bi bi-check-lg"></i>
            </div>

            <h1 class="confirmation-title">Teşekkürler @(ad ?? "")!</h1>
            <h2 class="confirmation-subtitle">Demo talebiniz başarıyla alındı</h2>

            <p class="confirmation-message">
                Demo talebiniz sistemimize kaydedildi. Uzman ekibimiz en kısa sürede sizinle iletişime geçerek
                demo randevunuzu planlayacak. Bu süreçte size özel hazırlanmış demo sunumumuzla
                sistemimizin tüm özelliklerini keşfedecek ve sorularınızın yanıtlarını alacaksınız.
            </p>

            <div class="next-steps">
                <h4>Sonraki Adımlar</h4>

                <div class="step-item">
                    <div class="step-number">1</div>
                    <p class="step-text">24 saat içinde uzman ekibimizden arama alacaksınız</p>
                </div>

                <div class="step-item">
                    <div class="step-number">2</div>
                    <p class="step-text">Size uygun demo randevusu planlanacak</p>
                </div>

                <div class="step-item">
                    <div class="step-number">3</div>
                    <p class="step-text">30 dakikalık canlı demo sunumu gerçekleştirilecek</p>
                </div>

                <div class="step-item">
                    <div class="step-number">4</div>
                    <p class="step-text">Özel fiyat teklifi ve çözüm önerileri sunulacak</p>
                </div>
            </div>

            <a href="/" class="btn-home">
                <i class="bi bi-house me-2"></i>
                Ana Sayfaya Dön
            </a>
        </div>
    </div>
</section>